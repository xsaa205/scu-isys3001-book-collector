{
  "version": 2,  // Specifies the Vercel configuration version (the latest version currently is v2)
  "builds": [    // Defines build rules
    {
      "src": "public/index.html",  // Path to the entry file
      "use": "@vercel/static"      // Uses Vercel's static file builder
    }
  ],
  "routes": [    // Defines routing rules (Single-Page Application (SPA) route redirection)
    {
      "src": "/(.*)",             // Matches all paths
      "dest": "/public/index.html" // Redirects to index.html (handled by front-end routing)
    }
  ]
}
